{
  "name": "ssbm-nucleus",
  "version": "0.2.0",
  "author": "sc00p",
  "license": "MIT",
  "description": "SSBM Nucleus - Costume and Stage Manager for Super Smash Bros. Melee",
  "main": "electron/main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "python backend/mex_api.py",
    "dev:frontend": "cd viewer && npm run dev",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev:backend\" \"npm run electron\"",
    "build": "cd viewer && npm run build",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:linux": "npm run build && electron-builder --linux",
    "install:viewer": "cd viewer && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.ssbm.nucleus",
    "productName": "SSBM Nucleus",
    "files": [
      "electron/**/*",
      "viewer/dist/**/*",
      "!backend/**/*",
      "!utility/**/*"
    ],
    "extraResources": [
      {
        "from": "dist/",
        "to": "backend/",
        "filter": ["mex_backend*"]
      },
      {
        "from": "dist-backend/",
        "to": "utility/",
        "filter": ["mex/**"]
      },
      {
        "from": "utility/assets/vanilla/Sheik",
        "to": "utility/assets/vanilla/Sheik",
        "filter": ["**/*.png"]
      },
      {
        "from": "utility/assets/vanilla/sounds",
        "to": "utility/assets/vanilla/sounds",
        "filter": ["**/*.wav"]
      },
      {
        "from": "utility/assets/buttons",
        "to": "utility/assets/buttons",
        "filter": ["**/*"]
      },
      {
        "from": "dist-backend/hsdraw",
        "to": "utility/HSDRawViewer",
        "filter": ["**/*"]
      },
      {
        "from": "utility/DynamicAlternateStages",
        "to": "utility/DynamicAlternateStages",
        "filter": ["**/*"]
      },
      {
        "from": "utility/website/backend/tools",
        "to": "utility/website/backend/tools",
        "filter": ["**/*"]
      },
      {
        "from": "scripts/tools/clear_storage.py",
        "to": "scripts/tools/clear_storage.py"
      }
    ],
    "directories": {
      "output": "dist-electron"
    },
    "win": {
      "target": "nsis",
      "icon": "viewer/public/icon.png",
      "sign": null,
      "signingHashAlgorithms": []
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": null
  }
}
