{
  "name": "melee-mex-manager",
  "version": "1.0.0",
  "description": "MEX Costume and Stage Manager for Super Smash Bros. Melee",
  "main": "electron/main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "python backend/mex_api.py",
    "dev:frontend": "cd viewer && npm run dev",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev:backend\" \"npm run electron\"",
    "build": "cd viewer && npm run build",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:linux": "npm run build && electron-builder --linux",
    "install:viewer": "cd viewer && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.meleemex.manager",
    "productName": "Melee Nexus",
    "files": [
      "electron/**/*",
      "viewer/dist/**/*",
      "!backend/**/*",
      "!utility/**/*"
    ],
    "extraResources": [
      {
        "from": "dist/",
        "to": "backend/",
        "filter": ["mex_backend*"]
      },
      {
        "from": "dist-backend/",
        "to": "utility/",
        "filter": ["mex*/**"]
      },
      {
        "from": "utility/MexManager/MexCLI/bin/Release/net6.0/codes.gct",
        "to": "utility/mex/codes.gct"
      },
      {
        "from": "utility/assets",
        "to": "utility/assets",
        "filter": ["**/*"]
      },
      {
        "from": "utility/DynamicAlternateStages",
        "to": "utility/DynamicAlternateStages",
        "filter": ["**/*"]
      },
      {
        "from": "utility/website/backend/tools",
        "to": "utility/website/backend/tools",
        "filter": ["**/*"]
      },
      {
        "from": "scripts/tools/clear_storage.py",
        "to": "scripts/tools/clear_storage.py"
      }
    ],
    "directories": {
      "output": "dist-electron"
    },
    "win": {
      "target": "nsis",
      "icon": "viewer/public/icon.ico",
      "sign": null,
      "signingHashAlgorithms": []
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": null,
    "linux": {
      "target": "AppImage",
      "icon": "viewer/public/icon.png",
      "category": "Game",
      "description": "MEX Costume and Stage Manager for Super Smash Bros. Melee",
      "maintainer": "Melee Nexus Team"
    }
  }
}
